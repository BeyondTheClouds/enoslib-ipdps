# Galera Cluster: mandatory settings
[server]
bind-address=0.0.0.0
binlog_format=row
default_storage_engine=InnoDB
innodb_autoinc_lock_mode=2
innodb_locks_unsafe_for_binlog=1
query_cache_size=0
query_cache_type=0

[galera]
wsrep_on=ON
wsrep_provider="/usr/lib/galera/libgalera_smm.so"
# In the following we use the `database` network
wsrep_cluster_address="gcomm://{% for h in groups['database'] %}{{ hostvars[h]['ansible_' + database]['ipv4']['address'] }}{% if not loop.last %},{% endif%}{% endfor %}"
wsrep-sst-method=rsync

# https://mariadb.com/kb/en/library/galera-cluster-system-variables/#wsrep_sync_wait
wsrep_sync_wait=15
